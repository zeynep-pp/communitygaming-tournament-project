type User {
    id: ID!
    name: String
    password: String
    email: String
    tournaments: [Tournament]
}

input CreateUserInput {
    name: String
    password: String
    email: String
}

input UpdateUserInput {
    id: ID!
    name: String
    password: String
    email: String
}

type Mutation {
    newUser(user: CreateUserInput!): User
    updateUser(user: UpdateUserInput!): User
    deleteUser(id: ID!) : Boolean
}

type Query {
    users: [User]
}