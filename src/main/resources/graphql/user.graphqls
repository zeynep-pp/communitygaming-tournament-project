type User {
    id: ID!
    username: String
    password: String
    email: String
    tournaments: [Tournament]
}

input RegisterInput {
    username: String
    password: String
    email: String
}

extend type Mutation {
    newUser(user: RegisterInput!): User
    deleteUser(id: ID!) : Boolean
}

type Query {
    users: [User]
}

